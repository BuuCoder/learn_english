DEEPSEEK_API_KEY=your_deepseek_api_key_here

DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=english_teacher
DB_USER=root
DB_PASSWORD=your_password

SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars

TOKEN_LIMIT_PER_USER=100000
FLASK_ENV=development

# ===========================================
# PRODUCTION SECURITY SETTINGS
# ===========================================

# Allowed domains (comma-separated, required for production)
# Example: ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=

# Session timeout in hours (default: 24)
SESSION_TIMEOUT_HOURS=24

# Max failed login attempts before lockout (default: 5)
MAX_LOGIN_ATTEMPTS=5

# Account lockout duration in minutes (default: 30)
LOCKOUT_DURATION_MINUTES=30

# Enable security logging (true/false)
SECURITY_LOGGING=true

# Rate limits (requests per minute)
RATE_LIMIT_LOGIN=10
RATE_LIMIT_REGISTER=5
RATE_LIMIT_CHAT=60
RATE_LIMIT_TTS=60
RATE_LIMIT_DEFAULT=200